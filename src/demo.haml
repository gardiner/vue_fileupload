%html(xmlns="http://www.w3.org/1999/xhtml" lang="de")
    %head
        %link(href="demo.css" rel="stylesheet" type="text/css")
        %script(src="https://cdnjs.cloudflare.com/ajax/libs/require.js/2.3.5/require.min.js" type="text/javascript")
        %title Vue Fileupload Demo
        :javascript
            requirejs.config({
                paths: {
                    "dropzone": "https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.1.1/dropzone",
                    "jquery": "https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min",
                    "vue": "https://cdnjs.cloudflare.com/ajax/libs/vue/2.5.3/vue.min",
                    "vue_fileupload": "../dist/vue_fileupload"
                }
            });
            requirejs(["jquery", "dropzone", "vue", "vue_fileupload"], function($, dropzone, vue, vue_fileupload) {
                "use strict";

                new vue({
                    components: {
                        fileupload: vue_fileupload
                    },
                    data: {
                        value: 'value'
                    }
                }).$mount("#demo");
            });

    %body
        #demo(v-cloak)
            %h2 Fileupload
            %fileupload(url="/upload.php" v-bind:params="{value: value}")
                Please drag files here to upload them.